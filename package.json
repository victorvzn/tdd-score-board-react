{
  "name": "tdd-score-board-react",
  "private": true,
  "description": "Football World Cup Score Board",
  "version": "0.1.0",
  "type": "module",
  "repository": "victorvzn/tdd-score-board-react",
  "keywords": [
    "tdd",
    "typescript",
    "reactjs",
    "vite",
    "vitest",
    "Testing Librart React",
    "cypress"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/tdd-score-board-react.umd.js",
  "module": "./dist/tdd-score-board-react.es.js",
  "exports": {
    ".": {
      "import": "./dist/tdd-score-board-react.es.js",
      "require": "./dist/tdd-score-board-react.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e": "npx cypress open"
  },
  "dependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "license": "MIT",
  "engines": {
		"node": ">=18.12.1"
	},
  "devDependencies": {
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/uuid": "9.0.0",
    "@vitejs/plugin-react": "3.0.0",
    "cypress": "12.3.0",
    "jsdom": "21.0.0",
    "ts-standard": "12.0.2",
    "typescript": "4.9.3",
    "uuid": "9.0.0",
    "vite": "4.0.0",
    "vitest": "0.27.1"
  }
}
